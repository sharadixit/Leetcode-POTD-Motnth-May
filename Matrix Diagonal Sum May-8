class Solution {
    public int diagonalSum(int[][] mat) {
        int sum=0;
        int r=mat.length;
        for(int i=0;i<r;i++){
            for( int j=0;j<mat[0].length;j++){
                if(i==j){
                    sum=sum+mat[i][j];
                }
                else if(j==(r-(i+1)) && i!=j){
                    sum=sum+mat[i][j];
                }
            }
        }
        return sum;
    }
}
